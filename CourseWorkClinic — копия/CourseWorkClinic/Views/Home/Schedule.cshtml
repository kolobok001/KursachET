@model IEnumerable<CourseWorkClinic.App_Data.Расписание_врачей>
    
@{
    ViewBag.Title = "Расписание";
}
<!--Подключение библиотк для работы с Ajax-->
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>

    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
    </hgroup>

<div>
    @using (Ajax.BeginForm("SheduleSearch", new AjaxOptions { UpdateTargetId = "results" }))
    {
        <div class="row search-row">
            <div class="search-col">
                <input type="text" name="specialitySearch" id="autocomplete-ajax" class="form-control has-icon" placeholder="Специальность" value="" autocomplete="off">
                <input type="text" name="surnameSearch" class="form-control has-icon" placeholder="Фамилия" value="">
                <button type="submit" class="btn btn-primary btn-search btn-block"><i class="icon-search"></i><strong>Поиск</strong></button>
            </div>
        </div>
    }
    <div id="results">
        <table class="simple-little-table" cellspacing='0'>
            <tr>
                <th>Специальность</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Неделя</th>
                <th>Понедельник</th>
                <th>Вторник</th>
                <th>Среда</th>
                <th>Четверг</th>
                <th>Пятница</th>
                <th>Суббота</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Специальность)</td>
                    <td>@Html.DisplayFor(modelItem => item.Фамилия)</td>
                    <td>@Html.DisplayFor(modelItem => item.Имя)</td>
                    <td>@Html.DisplayFor(modelItem => item.Отчество)</td>
                    <td>@Html.DisplayFor(modelItem => item.неделя)</td>
                    <td>@Html.DisplayFor(modelItem => item.Понедельник)</td>
                    <td>@Html.DisplayFor(modelItem => item.Вторник)</td>
                    <td>@Html.DisplayFor(modelItem => item.Среда)</td>
                    <td>@Html.DisplayFor(modelItem => item.Четверг)</td>
                    <td>@Html.DisplayFor(modelItem => item.Пятница)</td>
                    <td>@Html.DisplayFor(modelItem => item.Суббота)</td>
                </tr>
            }

        </table>
    </div>
</div>

<div class="themeControll" style="left: 90px; top: 190px">
    <div class="linkinner linkScroll">
        <h3>@Html.ActionLink("Регистрация", "RegistrationOnly", "Account")</h3>
        <h3>@Html.ActionLink("База пациентов", "PatientDatabase", "Account")</h3>
        <h3>@Html.ActionLink("Расписание врачей", "Schedule", "Home")</h3>
    </div>
</div>